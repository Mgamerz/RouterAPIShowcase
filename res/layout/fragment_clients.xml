<?xml version="1.0" encoding="utf-8"?><uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/network_clients_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp" >

    <ExpandableListView
        android:id="@+id/expandable_clientlist"
        style="@style/ListViewTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/clients_value"
        style="@style/TextTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/loading" />

</uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>