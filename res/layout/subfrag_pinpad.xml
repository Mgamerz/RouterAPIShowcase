<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/pin1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="1" />

        <Button
            android:id="@+id/pin2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="2" />

        <Button
            android:id="@+id/pin3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="3" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/pin4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="4" />

        <Button
            android:id="@+id/pin5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="5" />

        <Button
            android:id="@+id/pin6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="6" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/pin7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="7" />

        <Button
            android:id="@+id/pin8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="8" />

        <Button
            android:id="@+id/pin9"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="9" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button10"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="\?\?\?" />

        <Button
            android:id="@+id/pin0"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="0" />

        <Button
            android:id="@+id/pin_backspace"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:text="BACK-S" />
    </TableRow>

</TableLayout>