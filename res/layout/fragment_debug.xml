<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/debuglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/debug_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Switch
        android:id="@+id/usbled1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLED1GSwitch"
        android:text="POWER NONRAIL LED" />

    <fragment
        android:id="@+id/gpio_frag"
        android:name="com.cs481.mobilemapper.debug.DebugGPIOFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_gpio" />

</LinearLayout>