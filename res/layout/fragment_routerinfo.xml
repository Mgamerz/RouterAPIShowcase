<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >
    
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/routerinfo_infolayout"
    android:padding="10dp" >

    <TextView
        android:id="@+id/product_text"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product" />

    <TextView
        android:id="@+id/product_value"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mac_address_value"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/hostname_text"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_text"
        android:text="@string/hostname" />

    <TextView
        android:id="@+id/hostname_value"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mac_address_value"
        android:layout_below="@id/product_text"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/firmware_text"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hostname_text"
        android:text="@string/firmware" />

    <TextView
        android:id="@+id/firmware_value"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mac_address_value"
        android:layout_below="@id/hostname_text"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/mac_address_text"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firmware_text"
        android:text="@string/mac_address" />

    <TextView
        android:id="@+id/mac_address_value"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firmware_text"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/mac_address_text"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/uptime_text"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mac_address_text"
        android:text="@string/uptime" />

    <TextView
        android:id="@+id/uptime_value"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mac_address_value"
        android:layout_below="@id/mac_address_text"
        android:text="@string/loading" />

    <TextView
        android:id="@+id/numclients_text"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uptime_value"
        android:text="@string/num_clients" />

    <TextView
        android:id="@+id/numclients_value"
        style="@style/TextTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mac_address_value"
        android:layout_below="@id/uptime_value"
        android:text="@string/loading" />
	</RelativeLayout>
    
    <View
        android:id="@+id/line"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/routerinfo_infolayout"
        android:background="@color/DimmedWhite" />
    
    <FrameLayout
        android:id="@+id/log_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line" >
    </FrameLayout>

</RelativeLayout>