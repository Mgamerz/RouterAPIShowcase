<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/routerrow_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_router_online_dark" />

    <TextView
        android:id="@+id/routerrow_title"
        style="@style/TextTheme"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/routerrow_image"
        android:text="Router Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/routerrow_subtitle"
        style="@style/SubTextTheme"
        android:layout_width="match_parent"
        android:duplicateParentState="true"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/routerrow_title"
        android:layout_below="@+id/routerrow_title"
        android:text="Status/Model Name" />

</RelativeLayout>