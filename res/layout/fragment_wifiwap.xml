<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/wapconnect_ssidlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/wapconnect_ssidset_text"
                style="@style/TextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ssid" />

            <EditText
                android:id="@+id/wap_ssid_value"
                style="@style/EditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ssidname"
                android:inputType="textNoSuggestions|textVisiblePassword" />
        </LinearLayout>

        <TextView
            android:id="@+id/wapconnect_securitytype_text"
            style="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wapconnect_ssidlayout"
            android:layout_marginTop="5dp"
            android:text="@string/network_security" />

        <Spinner
            android:id="@+id/wap_encryptiontype_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/wapconnect_securitytype_text"
            android:layout_below="@+id/wapconnect_securitytype_text"
            android:textColor="@color/White"
            android:layout_marginLeft="17dp" />

        <TextView
            android:id="@+id/wapconnect_insecure_text"
            style="@style/SubTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wap_encryptiontype_spinner"
            android:text="@string/wap_client_connection_insecure" />

        <CheckBox
            android:id="@+id/wapconnect_roaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wapconnect_insecure_text"
            android:text="@string/wan_allow_roaming" />

        <RelativeLayout
            android:id="@+id/wapconnect_passwordlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wapconnect_roaming"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/wapconnect_password_text"
                style="@style/TextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="@string/password" />

            <CheckBox
                android:id="@+id/wapconnect_showpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wapconnect_password_field"
                android:text="@string/show_password" />

            <EditText
                android:id="@+id/wapconnect_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/wapconnect_password_text"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword" >

                <requestFocus />
            </EditText>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>