<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Mobile Mapper code goes below. -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:windowBackground">@color/Cradlepoint</item>
        <item name="android:buttonStyle">@style/RedButtonTheme</item>
    </style>

    <!-- Button theme -->
    <style name="RedButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/red_button_theme</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- TextView (not dialog!) theme -->
    <style name="RedTextTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- TextView SUBTEXT (subtitle) (not dialog!) theme -->
    <style name="RedSubTextTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/DimmedWhite</item>
    </style>

    <!-- Hint Text -->
    <style name="RedHintTextTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- EditText theme -->
    <style name="RedEditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/White</item>
        <item name="android:textColorHint">#CCCCCC</item>
    </style>

    <!-- Checkbox Theme -->
    <style name="RedCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- ListView Theme -->
    <style name="RedListViewTheme" parent="@android:style/Widget.Holo.Light.ListView">
        <item name="android:divider">#FFB2B2</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <!-- Dialog Theme -->
    <style name="RedDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">

        <!-- <item name="android:windowContentOverlay">@null</item> -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:colorBackground">@null</item> -->
        <item name="android:textColor">#550000</item>
    </style>

    <!-- Actionbar Item Theme -->
    <style name="RedActionBarItemTheme">
        <item name="android:text">@color/Black</item>
        <item name="android:textColor">@color/Black</item>
    </style>

</resources>