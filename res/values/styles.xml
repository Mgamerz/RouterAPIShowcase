<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:Theme.Holo.Light">
        <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
        -->
    </style>

    <!-- Mobile Mapper code goes below. -->
    <!-- Application theme. -->
    <style name="RedAppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/CradlepointRed</item>
        <item name="android:buttonStyle">@style/RedButtonTheme</item>
    </style>

    <style name="BlueAppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/CradlepointBlue</item>
        <item name="android:buttonStyle">@style/BlueButtonTheme</item>
    </style>

    <style name="GreenAppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/CradlepointGreen</item>
        <item name="android:buttonStyle">@style/GreenButtonTheme</item>
    </style>

    <style name="BlackAppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@color/Black</item>
        <item name="android:buttonStyle">@style/BlackButtonTheme</item>
    </style>

    <!-- Button theme -->
    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Button sub themes -->
    <style name="RedButtonTheme" parent="@style/ButtonTheme">
        <item name="android:background">@drawable/theme_button_red</item>
    </style>

    <style name="BlueButtonTheme" parent="@style/ButtonTheme">
        <item name="android:background">@drawable/theme_button_blue</item>
    </style>

    <style name="GreenButtonTheme" parent="@style/ButtonTheme">
        <item name="android:background">@drawable/theme_button_green</item>
    </style>

    <style name="BlackButtonTheme" parent="@style/ButtonTheme">
        <item name="android:background">@drawable/theme_button_black</item>
    </style>

    <!-- TextView (not dialog!) theme -->
    <style name="TextTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/selector_textcolor</item>
    </style>

    <!-- TextView SUBTEXT (subtitle) (not dialog!) theme -->
    <style name="SubTextTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/selector_subtextcolor</item>
    </style>

    <!-- EditText theme -->
    <style name="EditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/White</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/white_edit_text_holo_dark</item>
    </style>

    <!-- Checkbox Theme -->
    <style name="CheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/selector_textcolor</item>
        <item name="android:button">@drawable/white_checkbox_holo_dark</item>
    </style>

    <!-- ListView Theme -->
    <style name="ListViewTheme" parent="@android:style/Widget.Holo.Light.ListView">
        <item name="android:divider">@color/SubtextWhite</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:listSelector">@drawable/listview_background</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
    </style>

    <!-- Spinner Theme -->
    <style name="SpinnerTheme" parent="android:Theme.Holo.Light">
        <item name="android:dropDownSpinnerStyle">@style/SpinnerDropdownTheme</item>
        <item name="android:background">@drawable/spinnertheme_spinner_background_holo_dark</item>
    </style>

    <!-- Spinner dropdown theme -->
    <style name="SpinnerDropdownTheme" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinnertheme_spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/spinnertheme_list_selector_holo_dark</item>
    </style>

    <!-- Dialog Theme -->
    <style name="DialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <!-- Actionbar Item Theme -->
    <style name="RedActionBarItemTheme">
        <item name="android:text">@color/Black</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <!-- Switch Text Style -->
    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/White</item>
    </style>

</resources>