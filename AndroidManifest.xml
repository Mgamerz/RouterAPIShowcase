<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs481.commandcenter"
    android:versionCode="11"
    android:versionName="1.0 RC" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/RedAppTheme" >
        <service
            android:name="com.cs481.commandcenter.CCSpiceService"
            android:exported="false" />

        <activity
            android:name="com.cs481.commandcenter.activities.LoginActivity"
            android:label="@string/command_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cs481.commandcenter.debug.DebugActivity"
            android:label="@string/debug_title" />
        <activity
            android:name="com.cs481.commandcenter.activities.PrefsActivity"
            android:label="@string/prefs_title"
            android:theme="@android:style/Theme.Holo.Light" />
        <activity android:name="com.cs481.commandcenter.activities.PINActivity" >
        </activity>
        <activity
            android:name=".activities.CommandCenterActivity"
            android:label="@string/command_title" >
        </activity>
        <activity
            android:name=".activities.BugReportActivity"
            android:label="@string/bugreport_title"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>