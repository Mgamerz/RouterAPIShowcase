<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs481.mobilemapper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/RedAppTheme" >
        <service
            android:name="com.cs481.mobilemapper.CCSpiceService"
            android:exported="false" />

        <activity
            android:name="com.cs481.mobilemapper.activities.LoginActivity"
            android:label="@string/command_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cs481.mobilemapper.debug.DebugActivity"
            android:label="@string/debug_title" />

        <activity 
            android:name="com.cs481.mobilemapper.activities.PrefsActivity"
            android:label="@string/prefs_title" />

        <activity
            android:name="com.cs481.mobilemapper.activities.CommandCenterActivity"
            android:label="@string/command_title" >
        </activity>
        <activity android:name=".activities.PINActivity"></activity>
    </application>

</manifest>